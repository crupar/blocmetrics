<h1>Edit Applications</h1>
<div class="row">

<div class="col-md-8">
  <%= render 'form' %>

  <%= link_to 'Show Current Application', @registered_application %> |
  <%= link_to 'Back To All Registered Applications', registered_applications_path %>

    <p><%= f.submit "Save", class: 'btn btn-success' %></p>
    <p><%= link_to "Delete Application", @registered_application, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this entry?' } %></p>
<% end %>
<% end %>
